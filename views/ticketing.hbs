  <script>
    function showSidebar(){
      const sidebar = document.querySelector('.sidebar')
      sidebar.style.display = 'flex'
    }
    function hideSidebar(){
      const sidebar = document.querySelector('.sidebar')
      sidebar.style.display = 'none'
    }
  </script>

  <div class="ticket">

    <form method="POST" action="/event/book">
        <h2>Book tickets</h2>
        <p>Name</p>
        <input type="text" name="name" id="name" required>

        <p>Event title</p>
        <select id="choose_title" name="choose_title">
            <option selected="">Please Select</option>
            <option>Wedding</option>
            <option>Anniversary</option>
            <option>Sports</option>
            <option>Birthday</option>
            <option>Conferences</option>
            <option>Awards and Dinners</option>
            <option>Meetings</option>
            <option>Educational Events</option>
            <option>Corporate Events</option>
            <option>Private Events</option>
            <option>Christmas Party</option>
        </select>

        <p>Location</p>
        <input type="text" name="event_location" id="event_location" required>

        <p>Phone Number</p>
        <input type="text" name="phone_number" id="phone_number" required>

        <p>Number of Tickets</p>
        <input type="number" name="no_of_tickets" id="no_of_tickets" required>

        <button type="submit" value="create">Book Event</button>

            {{#if message}}
            <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}
            
        </form>
  </div>

<script src="ticketing.js"></script>
</body>
</html>